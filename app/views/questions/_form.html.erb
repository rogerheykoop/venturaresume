<%= form_for @question, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :label, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :label, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :explanation, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :explanation, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :default_value, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :default_value, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mandatory, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :mandatory, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  questions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
