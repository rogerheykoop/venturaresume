<%- model_class = Experience -%>
<div class="page-header">
  <h1><%=t '.title', :default => Experience %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:startdate) %></dt>
      <dd><pre class="prettyprint"><%= @experience.startdate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:enddate) %></dt>
      <dd><pre class="prettyprint"><%= @experience.enddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @experience.description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              experiences_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_experience_path(@experience), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              experience_path(@experience),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

